{
  "version": 2,
  "buildCommand": "npm run build",
  "functions": {
    "api/**/*.ts": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "rewrites": [
    { "source": "/api/groups/:id", "destination": "/api/groups?id=:id" },
    { "source": "/api/groups/:id/:action", "destination": "/api/groups?id=:id&action=:action" },
    { "source": "/api/students/:id", "destination": "/api/students?id=:id" },
    { "source": "/api/students/:id/:action", "destination": "/api/students?id=:id&action=:action" },
    { "source": "/api/grades/:id", "destination": "/api/grades?id=:id" },
    { "source": "/api/criteria/:id", "destination": "/api/criteria?id=:id" }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Credentials",
          "value": "true"
        },
        {
          "key": "Access-Control-Allow-Origin",
          "value": "https://student-reports-app.vercel.app"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS, PATCH"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version, Authorization"
        },
        {
          "key": "Access-Control-Max-Age",
          "value": "86400"
        }
      ]
    }
  ]
}